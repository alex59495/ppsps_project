<%= simple_form_for @direcct, remote: true do |f| %>
  <%= f.input :address, label: 'Adresse'%>
  <%= f.input :phone, label: 'Téléphone' %>
  <%= f.input :fax, label: 'Fax' %>
  <% if params[:action] == 'new' || params[:action] == 'index' %>
    <%= f.submit 'Créer un DIRECCT', class: 'btn-blue', id: "DirecctBtn" %>
  <% else %>
    <%= f.submit 'Modifier ce DIRECCT', class: 'btn-blue', id: "DirecctBtn" %>
  <% end %>
<% end %>