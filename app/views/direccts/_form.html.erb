<%= simple_form_for @direcct, remote: true do |f| %>
  <%= f.input :address, label: 'Adresse'%>
  <%= f.input :phone, label: 'Téléphone' %>
  <%= f.input :fax, label: 'Fax' %>
  <%= f.input :website, label: 'Site internet' %>
  <%= f.submit 'Ajouter', class: 'btn-blue', id: "DirecctBtn" %>
<% end %>