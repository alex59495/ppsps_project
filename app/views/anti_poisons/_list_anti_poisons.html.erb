<% @anti_poisons.each do |anti_poison| %>
  <div class="card-database">
    <div class="card-db-header">
      <%= link_to edit_anti_poison_path(anti_poison), class: "card-db-edit", target: '_blank' do %>
        <i class='fas fa-pencil-alt'></i>
      <% end %>
      <%= link_to "x", destroy_anti_poison_path(anti_poison), class: "card-db-delete", method: :post, data: { confirm: "Êtes-vous sûr de vouloir supprimer cet élément ?"} %>
    </div>
    <div class="db-element">
      <%= anti_poison.name %>
    </div>
    <div class="db-element">
      <%= anti_poison.address %>
    </div>
    <div class="db-element">
      <%= anti_poison.phone %>
    </div>
  </div>
<% end %>