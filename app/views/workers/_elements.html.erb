<% @database_page.each do |worker| %>
  <div class="card-bdd">
    <div class="flip-container">
      <div class="front">
        <div class="content-bdd">
          <div class="text-center mb-2 font-weight-bold"><%= "#{worker.first_name} #{worker.last_name}" %></div>
          <div class="line"><i class="fas fa-hard-hat logo-bdd"></i><%= worker.role %></div>
        </div>
      </div>
      <div class="back">
        <div class="content-bdd">
          <div class="line">
            <%= worker.lifesaver ? '<i class="fas fa-check text-success logo-bdd"></i>'.html_safe : '<i class="fas fa-times text-danger logo-bdd"></i>'.html_safe%> 
            <div class="line-text">
              Sauveteur
            </div>
          </div>
          <div class="line">
            <%= worker.conductor ? '<i class="fas fa-check text-success logo-bdd"></i>'.html_safe : '<i class="fas fa-times text-danger logo-bdd"></i>'.html_safe%>
            <div class="line-text">
              Conduteur
            </div>
          </div>
          <div class="card-db-action">
            <%= link_to edit_worker_path(worker), class: "card-db-edit" do %>
              <i class='fas fa-pencil-alt'></i>
            <% end %>
            <%= link_to "x", destroy_worker_path(worker), class: "card-db-delete", method: :post, data: { confirm: "Êtes-vous sûr de vouloir supprimer cet élément ?"} %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
<%= render 'shared/flashes' %>