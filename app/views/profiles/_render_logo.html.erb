<% if current_user.company.logo.attached? %>
  <div class="d-flex align-items-center">
    <%= cl_image_tag current_user.company.logo.key, class: 'icon-logo mb-1' %>
    <i class="fas fa-long-arrow-alt-right mx-4" style='font-size: 40px; display: none;'></i>
    <img id="newLogo" class='icon-logo'>
  </div>
  <%= link_to 'Supprimer', destroy_logo_company_path(current_user.company), class: 'btn-delete mb-2', id: 'removeLogo', remote: true %>
<% else %>
  <div class="d-flex align-items-center">
    <i style='font-size: 120px;'class="fas fa-question-circle mb-4"></i>
    <i class="fas fa-long-arrow-alt-right mx-4" style='font-size: 40px; display: none;'></i>
    <img id="newLogo" class='icon-logo'>
  </div>
  <p>Vous n'avez pas encore de logo d'entreprise</p>
<% end %>