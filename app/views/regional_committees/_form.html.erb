<%= simple_form_for @regional_committee, remote: true do |f| %>
  <%= f.input :name, label: 'Nom' %>
  <%= f.input :address, label: 'Adresse'%>
  <%= f.input :phone, label: 'Téléphone' %>
  <%= f.input :fax, label: 'Fax' %>
  <% if params[:action] == 'new' || params[:action] == 'index' %>
    <%= f.submit 'Créer un comité régional', class: 'btn-blue' %>
  <% else %>
    <%= f.submit 'Modifier ce comité régional', class: 'btn-blue' %>
  <% end %>
<% end %>