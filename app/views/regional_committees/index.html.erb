<div class="container">
  <div class="link-db">
    <%= link_to "Revenir aux bases de données", database_path %>
  </div>
  <% if policy(RegionalCommittee).new? %>
    <div>
      <button type="button" class="btn-blue" data-toggle="modal" data-target="#ModalRegionalCommittee">
        Ajouter un Comité Régional
      </button>
    </div>
  <% end %>
  <%# Modal Regional Committee %>
  <% if policy(RegionalCommittee).new? %>
    <div class="modal fade" id="ModalRegionalCommittee" tabindex="-1" role="dialog" aria-labelledby="ModalRegionalCommittee" aria-hidden="true">
      <%= render 'ppsps/modal_regional_committee' %>
    </div>
  <% end %>
  <div class="container-database">
    <%= form_with url: regional_committees_path, class: "d-flex mt-2 justify-content-center", method: :get do |f| %>
      <%= f.text_field :query, params: :query, class: "form-control search-db", placeholder: "Rechercher un mot-clé..." %>
      <%= f.submit 'Go', class: "btn-orange-right" %>
    <% end %>
    <form class="d-flex justify-content-center mt-1" method="get" action=<%= regional_committees_path %> data-remote="true">
      <input class="btn-orange-ext" type="submit" value="Database complète">
    </form>
    <% if @regional_committees.length > 0 %>
      <div class="d-flex flex-wrap mt-2 justify-content-center">
        <% @regional_committees.each do |regional_committee| %>
          <div class="card-database">
            <div class="card-db-header">
              <%= link_to edit_regional_committee_path(regional_committee), class: "card-db-edit", target: '_blank' do %>
                <i class='fas fa-pencil-alt'></i>
              <% end %>
              <%= link_to "x", destroy_regional_committee_path(regional_committee), class: "card-db-delete", method: :post, data: { confirm: "Êtes-vous sûr de vouloir supprimer cet élément ?"} %>
            </div>
            <div class="db-element">
              <%= regional_committee.name %>
            </div>
            <div class="db-element">
              <%= regional_committee.address %>
            </div>
            <div class="db-element">
              <%= regional_committee.phone %>
            </div>
            <div class="db-element">
            <%= regional_committee.fax %>
          </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="container-db-vide">
        Votre recherche n'a retourné aucun résultat
      </div>
    <% end %>
  </div>
</div>