$(document).ready(function() {
  $(".modal-backdrop").hide();
  $("#ModalHospital").hide();
  document.getElementById("new_hospital").reset();
  $(".modal-open").css({overflow: 'scroll'});
  if (document.querySelector(".ppsp_hospital_id")) {
    document.querySelector(".ppsp_hospital_id").innerHTML = "<%= j(render 'form_field_hospital') %>";
  }
  if (document.querySelector(".content-db")) {
    document.querySelector(".content-db").innerHTML = "<%= j(render 'database/content-db') %>";
  }
})

