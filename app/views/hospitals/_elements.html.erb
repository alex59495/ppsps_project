<% @database_page.each do |hospital| %>
  <div class="card-bdd">
    <div class="flip-container">
      <div class="front">
        <div class="content-bdd"><%= hospital.name %></div>
      </div>
      <div class="back">
        <div class="content-bdd">
          <div class="line">
          <i class="fas fa-map-marker-alt logo-bdd"></i>
          <div class="line-text">
            <%= hospital.address %>
          </div>
        </div>
          <div class="line">
          <i class="fas fa-phone-alt logo-bdd"></i>
          <div class="line-text">
            <%= hospital.phone %>
          </div>
          </div>
          <div class="card-db-action">
            <%= link_to edit_hospital_path(hospital), class: "card-db-edit" do %>
              <i class='fas fa-pencil-alt'></i>
            <% end %>
            <%= link_to "x", destroy_hospital_path(hospital), class: "card-db-delete", method: :post, data: { confirm: "Êtes-vous sûr de vouloir supprimer cet élément ?"} %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
<%= render 'shared/flashes' %>