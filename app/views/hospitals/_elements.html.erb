<% @database_page.each do |hospital| %>
  <div class="card-bdd">
    <div class="front">
      <div class="card-bdd-container">
        <div class="text-center"><%= hospital.name %></div>
      </div>
    </div>
    <div class="back">
      <div class="card-bdd-container">
        <div class="line"><i class="fas fa-map-marker-alt"></i><%= hospital.address %></div>
        <div class="line"><i class="fas fa-phone-alt"></i><%= hospital.phone %></div>
        <div class="card-db-action">
          <%= link_to edit_hospital_path(hospital), class: "card-db-edit" do %>
            <i class='fas fa-pencil-alt'></i>
          <% end %>
          <%= link_to "x", destroy_hospital_path(hospital), class: "card-db-delete", method: :post, data: { confirm: "Êtes-vous sûr de vouloir supprimer cet élément ?"} %>
        </div>
      </div>
    </div>
  </div>
<% end %>