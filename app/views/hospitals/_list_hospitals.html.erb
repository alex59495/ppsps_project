<%= form_with url: hospitals_path, class: "d-flex mt-2 justify-content-center", method: :get do |f| %>
    <%= f.text_field :query, params: :query, class: "form-control search-db", placeholder: "Rechercher un mot-clé..." %>
    <%= f.submit 'Go', class: "btn-orange-right" %>
<% end %>
<form class="d-flex justify-content-center mt-1" method="get" action=<%= hospitals_path %> data-remote="true">
  <input class="btn-orange-ext" type="submit" value="Database complète">
</form>
<% if @hospitals.length > 0 %>
  <div class="flex-database d-flex flex-wrap mt-2 justify-content-center">
    <%= render 'element', collection: @hospitals_page %>
  </div>
<% else %>
  <div class="container-db-vide">
    Votre recherche n'a retourné aucun résultat
  </div>
<% end %>
<%# Insert a data-search in order to add in tje infinite scroll js an element which knows that this is the result of the "search" to reset the currentPage counter %>
<div class="container-pagination" data-pagination-endpoint=<%= @endpoint %> data-pagination-pages=<%= @page_amount %> data-search="result">
  <%= image_tag('gif-loading.gif') %>
</div>
