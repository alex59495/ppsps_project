<% @hospitals.each do |hospital| %>
  <div class="card-database">
    <div class="card-db-header">
      <%= link_to edit_hospital_path(hospital), class: "card-db-edit", target: '_blank' do %>
        <i class='fas fa-pencil-alt'></i>
      <% end %>
      <%= link_to "x", hospital_path(hospital), class: "card-db-delete", method: :delete, data: { confirm: "Êtes-vous sûr de vouloir supprimer cet élément ?"} %>
    </div>
    <div class="db-element">
      <%= hospital.name %>
    </div>
    <div class="db-element">
      <%= hospital.address %>
    </div>
    <div class="db-element">
      <%= hospital.phone %>
    </div>
  </div>
<% end %>