<% @hospitals.each do |hospital| %>
  <div class="card-database">
    <%= link_to hospital, hospital_path(hospital) %>
    <%= link_to "Edit", edit_hospital_path(hospital) %>
    <%= link_to "x", hospital_path(hospital), method: :delete, data: { confirm: "Êtes-vous sûr de vouloir supprimer cet élément ?"} %>
  </div>
<% end %>