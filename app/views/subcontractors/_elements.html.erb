<% @database_page.each do |subcontractor| %>
  <div class="card-bdd">
    <div class="front">
      <div class="card-bdd-container">
        <div class="text-center"><%= subcontractor.name %></div>
        <div class="line"><i class="fas fa-user"></i><%= subcontractor.responsible_name %></div>
      </div>
    </div>
    <div class="back">
      <div class="card-bdd-container">
        <div class="line"><i class="fas fa-map-marker-alt"></i><%= subcontractor.address %></div>
        <div class="line"><i class="fas fa-tools"></i><%= subcontractor.work %></div>
        <div class="line"><i class="fas fa-envelope"></i><%= subcontractor.responsible_email %></div>
        <div class="line"><i class="fas fa-phone-alt"></i><%= subcontractor.responsible_phone %></div>
        <div class="card-db-action">
          <%= link_to edit_subcontractor_path(subcontractor), class: "card-db-edit" do %>
            <i class='fas fa-pencil-alt'></i>
          <% end %>
          <%= link_to "x", destroy_subcontractor_path(subcontractor), class: "card-db-delete", method: :post, data: { confirm: "Êtes-vous sûr de vouloir supprimer cet élément ?"} %>
        </div>
      </div>
    </div>
  </div>
<% end %>