<%= simple_form_for @sos_hand do |f| %>
  <%= f.input :name, label: 'Nom' %>
  <%= f.input :address, label: 'Adresse' %>
  <%= f.input :phone, label: 'Téléphone' %>
  <% if params[:action] == 'new' %>
    <%= f.submit 'Créer un centre', class: 'btn-blue' %>
  <% else %>
    <%= f.submit 'Modifier ce centre', class: 'btn-blue' %>
  <% end %>
<% end %>