<div class="container">
  <div class="link-db">
    <%= link_to "Revenir aux bases de données", database_path %>
  </div>
  <% if policy(Moe).new? %>
    <div>
      <button type="button" class="btn-blue" data-toggle="modal" data-target="#ModalMoe">
        Ajouter un Maître d'oeuvre
      </button>
    </div>
  <% end %>
  <%# Modal Moa %>
  <% if policy(Moe).new? %>
    <div class="modal fade" id="ModalMoe" tabindex="-1" role="dialog" aria-labelledby="ModalMoe" aria-hidden="true">
      <%= render 'ppsps/modal_moe' %>
    </div>
  <% end %>
  <div class="container-database">
    <% @moes.each do |moe| %>
      <div class="card-database">
        <div class="card-db-header">
          <%= link_to edit_mo_path(moe), class: "card-db-edit", target: '_blank' do %>
            <i class='fas fa-pencil-alt'></i>
          <% end %>
          <%= link_to "x", mo_path(moe), class: "card-db-delete", method: :delete, data: { confirm: "Êtes-vous sûr de vouloir supprimer cet élément ?"} %>
        </div>
        <div class="db-element">
          <%= moe.name %>
        </div>
        <div class="db-element">
          <%= moe.address %>
        </div>
        <div class="db-element">
          <%= moe.representative %>
        </div>
        <div class="db-element">
          <%= moe.phone %>
        </div>
        <div class="db-element">
          <%= moe.email %>
        </div>
      </div>
    <% end %>
  </div>
</div>