<div class="row">
  <div class="col-6 offset-3">
    <%= simple_form_for @user do |f| %>
      <%= f.input :first_name, label: "Prénom" %>
      <%= f.input :last_name, label: "Nom de famille" %>
      <%= f.submit "Ëditer les informations", class: 'btn-blue' %>
    <% end %>
    <%= link_to "Revenir au profil", user_path(@user), class: 'link' %>
  </div>
</div>