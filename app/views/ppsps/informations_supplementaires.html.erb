<div>
  <input type="checkbox" id="checkSiteInstallation" name="siteInstallation">
  <label for="checkSiteInstallation">Y-a-t-il des installations de chantier ?</label>
</div>

<div class="hidden-form hidden" id="siteInstallationType">
  <input type="checkbox" id="checkSiteInstallationMobile" name="siteInstallationMobile">
  <label for="checkSiteInstallationMobile">Mobile ?</label>
  <input type="checkbox" id="checkSiteInstallationFix" name="siteInstallationFix">
  <label for="checkSiteInstallationFix">Fixe ?</label>
</div>

<div class="hidden-form hidden" id="siteInstallationMobile">
  <%= simple_form_for [@ppsp, @selected_installation], remote: true do |f| %>
    <%= f.association :site_installation, as: :check_boxes, collection: SiteInstallation.where(mobile: true).order(:name) %>
    <%= f.button :submit, "Ajouter des installations mobiles" %>
  <% end %>
</div>

<%# Not to have a double id with the other form %>
<div class="hidden-form hidden" id="siteInstallationFix">
  <%= simple_form_for [@ppsp, @selected_installation], remote: true do |f| %>
    <%= f.association :site_installation, as: :check_boxes, collection: SiteInstallation.where(mobile: false).order(:name) %>
    <%= f.button :submit, "Ajouter des installations mobiles" %>
  <% end %>
</div>

<div class="selected_active">
  <% @selected_installation_active.each do |select_installation| %>
    <div class="card-info-selected">
      <div class="card-info-name">
        <%= select_installation.site_installation.name %>
      </div>
      <div class="card-btn-delete">
        <%= link_to "x",  ppsp_selected_installation_path(select_installation.ppsp.id, select_installation.id), method: :delete, remote: true, data: {confirm: "Êtes-vous sûr de vouloir supprimer ?"} %>
      </div>
    </div>
  <% end %>
</div>

<div>
  <input type="checkbox" id="checkAltitudeWork" name="altitudeWork">
  <label for="checkAltitudeWork">Le chantier est-il concerné par des travaux en hauteur ?</label>
</div>

<form class="simple_form new_selected_altitude hidden-form hidden" id="altitudeWork" novalidate="novalidate" action=<%= ppsp_selected_altitudes_path(@ppsp) %> data-remote="true" accept-charset="UTF-8" method="post">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
  <fieldset class="form-group check_boxes required selected_altitude_altitude_work">
    <legend class="col-form-label pt-0">Altitude work <abbr title="required">*</abbr></legend>
    <input type="hidden" name="selected_altitude[altitude_work_id][]" value="">
    <% @work_altitudes.each do |work| %>
      <div class="form-check">
        <input class="form-check-input check_boxes required" type="checkbox" value="<%= work.id %>" name="selected_altitude[altitude_work_id][]" id="selected_altitude_altitude_work_id_<%= work.id %>">
        <label class="form-check-label collection_check_boxes" for="selected_altitude_altitude_work_id_<%= work.id %>"><%= work.name %></label>
      </div>
    <% end %>
      <input class="form-control string required" type="text" placeholder="Autres..." name="selected_altitude[altitude_work_id][]" id="selected_altitude_altitude_work_id_<%= AltitudeWork.last.id + 1 %>">
    <input type="submit" name="commit" value="Create Selected altitude" data-disable-with="Create Selected altitude">
  </fieldset>
</form>

<div class="selected_active">
  <% @selected_altitude_active.each do |select_altitude| %>
    <div class="card-info-selected">
      <div class="card-info-name">
        <% if select_altitude.other %>
          <%= select_altitude.altitude_work.name %>, <%= select_altitude.other %>
        <% else %>
          <%= select_altitude.altitude_work.name %>
        <% end %>
      </div>
      <div class="card-btn-delete">
        <%= link_to "x",  ppsp_selected_altitude_path(select_altitude.ppsp.id, select_altitude.id), method: :delete, remote: true, data: {confirm: "Êtes-vous sûr de vouloir supprimer ?"} %>
      </div>
    </div>
  <% end %>
</div>

