<%= simple_form_for @pension_insurance, remote: true do |f| %>
  <%= f.input :address, label: 'Adresse' %>
  <%= f.input :phone, label: 'Téléphone' %>
  <%= f.input :fax, label: 'Fax' %>
  <% if params[:action] == 'new' || params[:action] == 'index' %>
    <%= f.submit "Créer un caisse d'assurance retraite", class: 'btn-blue' %>
  <% else %>
    <%= f.submit "Modifier cette caisse d'assurance retraite", class: 'btn-blue' %>
  <% end %>
<% end %>