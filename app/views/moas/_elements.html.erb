<% @moas_page.each do |moa| %>
  <div class="card-database">
    <div id="spacer"></div>
    <div class="db-element col-15">
      <%= moa.name %>
    </div>
    <div class="db-element col-35">
      <%= moa.address %>
    </div>
    <div class="db-element col-15">
      <%= moa.representative %>
    </div>
    <div class="db-element col-15">
      <%= moa.phone %>
    </div>
    <div class="db-element word-break col-20">
      <%= moa.email %>
    </div>
    <div class="card-db-action">
      <%= link_to edit_moa_path(moa), class: "card-db-edit" do %>
        <i class='fas fa-pencil-alt'></i>
      <% end %>
      <%= link_to "x", destroy_moa_path(moa), class: "card-db-delete", method: :post, data: { confirm: "Êtes-vous sûr de vouloir supprimer cet élément ?"} %>
    </div>
  </div>
<% end %>