<%= simple_form_for @work_medecine, remote: true do |f| %>
  <%= f.input :address, label: 'Adresse' %>
  <%= f.input :phone, label: 'Téléphone' %>
  <%= f.input :fax, label: 'Fax' %>
  <% if params[:action] == 'new' || params[:action] == 'index' %>
    <%= f.submit 'Créer un nouveau', class: 'btn-blue', id: "WorkMedecineBtn" %>
  <% else %>
    <%= f.submit 'Modifier', class: 'btn-blue', id: "WorkMedecineBtn" %>
  <% end %>
<% end %>