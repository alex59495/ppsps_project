<div class="container">
  <div class="link-db">
    <%= link_to "Revenir aux bases de données", database_path %>
  </div>
  <% if policy(WorkMedecine).new? %>
    <div>
      <button type="button" class="btn-blue" data-toggle="modal" data-target="#ModalWorkMedecine">
        Ajouter un médecin du travail
      </button>
    </div>
  <% end %>
  <%# Modal Work Medecine %>
  <% if policy(WorkMedecine).new? %>
    <div class="modal fade" id="ModalWorkMedecine" tabindex="-1" role="dialog" aria-labelledby="ModalWorkMedecine" aria-hidden="true">
      <%= render 'ppsps/modal_work_medecine' %>
    </div>
  <% end %>
  <div class="container-database">
    <% @work_medecines.each do |work_medecine| %>
      <div class="card-database">
        <div class="card-db-header">
          <%= link_to edit_work_medecine_path(work_medecine), class: "card-db-edit", target: '_blank' do %>
            <i class='fas fa-pencil-alt'></i>
          <% end %>
          <%= link_to "x", destroy_work_medecine_path(work_medecine), class: "card-db-delete", method: :post, data: { confirm: "Êtes-vous sûr de vouloir supprimer cet élément ?"} %>
        </div>
        <div class="db-element">
          <%= work_medecine.address %>
        </div>
        <div class="db-element">
          <%= work_medecine.phone %>
        </div>
        <div class="db-element">
          <%= work_medecine.fax %>
        </div>
      </div>
    <% end %>
  </div>
</div>